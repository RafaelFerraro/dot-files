{
    "workbench.colorTheme": "Default Dark+",
    "files.insertFinalNewline": true,
    "editor.fontSize": 14,
    "vim.leader": "<Space>",
    "vim.visualModeKeyBindings": [
        {
            "before": ["="],
            "commands": [
                "editor.action.reindentselectedlines"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before":["<C-n>"],
            "commands": [
                ":nohl",
            ]
        },
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        }
    ],
    "editor.tabSize": 2,
    "window.zoomLevel": 1
}

// key repeating is disabled by default in mac os
// here we can enable it for vscode vim https://vimforvscode.com/enable-key-repeat-vim
